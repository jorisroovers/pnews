html
    head
        title= title
        link(rel="stylesheet" href="css/foundation.min.css")
        link(rel="stylesheet" href="css/styles.css")
        script(src="https://fb.me/react-0.14.2.js")
        script(src="https://fb.me/react-dom-0.14.2.js")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.23/browser.min.js")
        // jquery is optional for Ajax
        //script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js")
    body
        .top-bar
            .top-bar-left
                div
                    = "pnews"
            .top-bar-right
                ul.menu
                    li
                        = "top:"
                    li.active
                        a
                            = "day"
                    li
                        a
                            = "week"

        //#content
        #posts
            each post in posts
                .post
                    .votes
                        = post.data.ups
                    .title
                        a(href=post.data.url)
                            = post.data.title
                    .info
                        div.source.reddit
                            div.pill
                                = "reddit"
                        div.date= post.data.date_str
                        div.comments
                            a(href="https://reddit.com" + post.data.permalink)
                                =  post.data.num_comments + " comments"

